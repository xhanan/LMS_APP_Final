<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/gradient_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="84dp"
        android:layout_height="79dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/course_icon"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="143dp"
        android:layout_height="34dp"
        android:text="@string/addCourseText"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/add_course_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709" />

    <EditText
        android:id="@+id/add_course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="23dp"
        android:drawableLeft="@drawable/ic_baseline_short_text_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="@string/nameText"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHighlight="#BDBDBD"
        android:textColorHint="#BDBDBD"
        app:layout_constraintBottom_toTopOf="@+id/add_course_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/add_course_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:drawableLeft="@drawable/ic_baseline_category_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="@string/categoryText"
        android:inputType="textPersonName"
        android:textColorHint="#BDBDBD"
        app:layout_constraintEnd_toEndOf="@+id/add_course_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/add_course_name"
        app:layout_constraintTop_toBottomOf="@+id/add_course_name"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/add_course_technology"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:drawableLeft="@drawable/ic_baseline_computer_24"
        android:drawablePadding="5dp"
        android:hint="@string/technologyText"
        android:inputType="textPersonName"
        android:textColorHint="#BDBDBD"
        app:layout_constraintEnd_toEndOf="@+id/add_course_category"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/add_course_category"
        app:layout_constraintTop_toBottomOf="@+id/add_course_category"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/add_course_image_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_baseline_image_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Image Url"
        android:textColorHint="#BDBDBD"
        app:layout_constraintEnd_toEndOf="@+id/add_course_technology"
        app:layout_constraintStart_toStartOf="@+id/add_course_technology"
        app:layout_constraintTop_toBottomOf="@+id/add_course_technology"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/add_course_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/descriptionText"
        android:textColorHint="#BDBDBD"
        android:drawableLeft="@drawable/ic_baseline_short_text_24"
        android:drawablePadding="5dp"
        app:layout_constraintEnd_toEndOf="@+id/add_course_image_url"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/add_course_image_url"
        app:layout_constraintTop_toBottomOf="@+id/add_course_image_url"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/add_course_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/addCourseText"
        app:layout_constraintEnd_toEndOf="@+id/add_course_description"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/add_course_description"
        app:layout_constraintTop_toBottomOf="@+id/add_course_description"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>